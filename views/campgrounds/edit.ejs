<%- include("../partials/header") %> 
<h1 class="h2 mb-3 pb-3 py-2 font-weight-normal text-center"> Edit: <%= campground.name %> </h1>
<div class="container col-sm-10 col-md-7">
    <form action="/campgrounds/<%= campground.id %>?_method=PUT " method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" id="name" name="name" value="<%= campground.name %> ">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input class="form-control" type="number" id="price" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <label>Image</label>
        <div class="custom-file form-group pb-5">    
            <label class="custom-file-label" for="image">Choose file</label>
            <input type="file" class="custom-file-input" id="customFile" name="image" accept="image/*" required>
        </div>
        <div class="form-group pt-2">
            <label for="description">Description</label>
            <input class="form-control" type="text" name="description" value="<%= campground.description %> ">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>  
    </form>
    <a href="/campgrounds">Go Back</a>  
</div>

<script src="dist/bs-custom-file-input.min.js"></script>
    <script>
      bsCustomFileInput.init();

      var btn = document.getElementById('btnResetForm');
      var form = document.querySelector('form');
      btn.addEventListener('click', function () {
        form.reset()
      });
    </script>

<%- include("../partials/footer") %> 