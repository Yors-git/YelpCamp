<%- include("../partials/header") %> 

<h1 class="h2 mb-3 pb-3 pt-4 text-center font-weight-normal">Edit Comment</h1>

<div class="container col-md-8 col-lg-8">
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="comment">Comment</label>
            <input type="text" class="form-control" name="comment[text]" id="comment" value="<%= comment.text %>" aria-describedby="comment">
        </div>
        <div class="d-flex justify-content-between">
            <button class="btn btn-primary">Submit</button>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
        
    </form>       
</div>

<%- include("../partials/footer") %> 